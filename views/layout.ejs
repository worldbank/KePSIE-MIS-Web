    <script>

        function removeHighlights() {
            $("#sideMenu>li.active").removeClass("active");
            $("#sideMenu>li.open").removeClass("open");
            $("#sideMenu>li>a>span.arrow").removeClass("open");
            $("#sideMenu>li>ul>li.active").removeClass("active");
            $("#sideMenu>li>ul>li>ul>li.active").removeClass("active");
        }

        function highlightMenu(ids) {
            removeHighlights();
            for(index in ids) {
                $("#"+ids[index]+"LI").addClass("active");
                $("#"+ids[index]+"LI").addClass("open");
                $("#"+ids[index]+"LI>a>span.arrow").addClass("open");
            }
        }

    </script>
